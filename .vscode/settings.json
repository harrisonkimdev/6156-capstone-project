{
  // Python 인터프리터를 conda 환경으로 설정
  "python.defaultInterpreterPath": "/opt/miniconda3/envs/6156-capstone/bin/python",
  "python.terminal.activateEnvironment": false,
  
  // 터미널이 열릴 때 자동으로 conda 환경 활성화
  "terminal.integrated.profiles.osx": {
    "zsh (conda 6156-capstone)": {
      "path": "/bin/zsh",
      "args": [
        "-l",
        "-c",
        "conda activate 6156-capstone && exec zsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh (conda 6156-capstone)",
  
  // Python 관련 설정
  "python.condaPath": "/opt/miniconda3/bin/conda",
  "python.venvPath": "/opt/miniconda3/envs"
}

